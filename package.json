{
  "name": "mappersmith",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tulios/mappersmith.git"
  },
  "scripts": {
    "build": "pnpm run build:code && pnpm run build:typings && pnpm run copy:dts",
    "build:clean": "rm -rf dist/ && pnpm run build && echo 'Done!'",
    "build:code": "echo 'Building source...' && babel packages -d dist/ --extensions '.js,.ts' --ignore '**/node_modules','**/*.spec.ts','**/*.spec.js','**/*.d.ts','**/dist','**/spec' --verbose",
    "build:project": "./scripts/build-project.sh",
    "build:typings": "echo 'Building type definitions...' && tsc --project tsconfig.typings.json",
    "copy:dts": "echo 'Copying type definitions...' && pnpm run copy:dts:core && pnpm run copy:dts:test",
    "copy:dts:core": "copyfiles -u 1 \"packages/core/src/*.d.ts\" dist",
    "copy:dts:test": "copyfiles -u 1 \"packages/test/src/*.d.ts\" dist",
    "lint": "eslint \"packages/**/{src,spec}/**/*.[j|t]s\"",
    "release": "./scripts/release.sh",
    "test": "pnpm run test:types && git clean -fd && prettier --check . && pnpm run lint && pnpm run test:ci",
    "integration-server": "node packages/core/spec/integration/server.js",
    "test:ci": "concurrently -c \"auto\" --success first --names \"test,server\" --kill-others \"node scripts/ci.js\" \"pnpm run integration-server\"",
    "test:browser:integration": "cross-env NODE_ENV=test karma start karma.conf.js",
    "test:browser": "jest --config jestSetup/configs/config.web.json",
    "test:node:integration": "cross-env NODE_ENV=test ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "test:node": "jest --config jestSetup/configs/config.node.json",
    "test:service-worker": "jest --config jestSetup/configs/config.sw.json",
    "test:types": "tsc --build"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@babel/register": "<7.12.0",
    "@changesets/cli": "^2.25.2",
    "@chiragrupani/karma-chromium-edge-launcher": "^2.1.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "abort-controller": "^3.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.0.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-minify-replace": "^0.5.0",
    "base64-js": "^1.3.1",
    "browser-resolve": "^2.0.0",
    "builtin-status-codes": "^3.0.0",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "core-js": "^3.21.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "ieee754": "^1.1.4",
    "inherits": "^2.0.4",
    "isarray": "^1.0.0",
    "jasmine": "^4.0.0",
    "jasmine-core": "^4.0.0",
    "jest": "^27.0.0",
    "js-md5": "^0.7.3",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.33",
    "karma-webpack": "<5.0.0",
    "prettier": "^2.5.0",
    "process": "0.11.10",
    "puppeteer": "^13.1.1",
    "readable-stream": "^3.6.0",
    "regenerator-runtime": "^0.13.9",
    "safe-buffer": "^5.2.1",
    "to-arraybuffer": "^1.0.0",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.2.1",
    "typescript": "*",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "util-deprecate": "^1.0.1",
    "webpack": "<5.0.0",
    "webpack-cli": "^4.8.0",
    "whatwg-fetch": "^3.6.2",
    "xtend": "^4.0.0"
  },
  "overrides": {
    "typescript": "^4.9.4"
  }
}
