{
  "name": "mappersmith",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tulios/mappersmith.git"
  },
  "scripts": {
    "build": "yarn copy:version:src && yarn build:code && yarn build:typings && yarn copy:dts",
    "build:clean": "rm -rf dist/ && yarn build && echo 'Done!'",
    "build:code": "echo 'Building source...' && yarn babel packages -d dist/ --extensions '.js,.ts' --ignore '**/*.spec.ts','**/*.spec.js','**/*.d.ts','**/dist','**/spec'",
    "build:project": "./scripts/build-project.sh",
    "build:typings": "echo 'Building type definitions...' && yarn tsc --project tsconfig.typings.json",
    "copy:dts": "echo 'Copying type definitions...' && yarn copy:dts:core && yarn copy:dts:test",
    "copy:dts:core": "copyfiles -u 1 \"packages/core/src/*.d.ts\" dist",
    "copy:dts:test": "copyfiles -u 1 \"packages/test/src/*.d.ts\" dist",
    "lint": "yarn eslint \"packages/**/{src,spec}/**/*.[j|t]s\"",
    "release": "./scripts/release.sh",
    "test": "yarn test:types && yarn prettier --check . && yarn lint && yarn test:all",
    "test:all": "concurrently -c \"auto\" --success first --names \"test,server\" --kill-others \"node scripts/ci.js\" \"yarn workspace @mappersmith/core run integration-server\"",
    "test:browser:integration": "cross-env NODE_ENV=test yarn karma start karma.conf.js",
    "test:browser": "yarn jest --config jestSetup/configs/config.web.json",
    "test:node:integration": "cross-env NODE_ENV=test yarn ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "test:node": "yarn jest --config jestSetup/configs/config.node.json",
    "test:service-worker": "yarn jest --config jestSetup/configs/config.sw.json",
    "test:types": "yarn tsc --build"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@babel/register": "<7.12.0",
    "@chiragrupani/karma-chromium-edge-launcher": "^2.1.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.0.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-minify-replace": "^0.5.0",
    "browser-resolve": "^2.0.0",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.0.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.33",
    "karma-webpack": "<5.0.0",
    "prettier": "^2.5.0",
    "puppeteer": "^13.1.1",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "<5.0.0",
    "webpack-cli": "^4.8.0"
  }
}
