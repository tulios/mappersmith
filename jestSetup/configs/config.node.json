{
  "preset": "ts-jest",
  "transform": {
    "\\.[jt]s$": "babel-jest"
  },
  "rootDir": "../../",
  "testEnvironment": "node",
  "fakeTimers": {
    "enableGlobally": true
  },
  "testMatch": ["**/?(*.)+(spec).[jt]s?(x)", "!**/?(*.)+(web).(spec).[jt]s?(x)"],
  "roots": ["<rootDir>/src/", "<rootDir>/spec/node/"],
  "modulePaths": ["<rootDir>"],
  "setupFiles": ["<rootDir>/jestSetup/index.ts"]
}
