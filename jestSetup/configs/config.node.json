{
  "preset": "ts-jest",
  "transform": {
    "\\.[jt]s$": "babel-jest"
  },
  "rootDir": "../../",
  "testEnvironment": "node",
  "timers": "fake",
  "testMatch": ["**/?(*.)+(spec).[jt]s", "!**/?(*.)+(web).(spec).[jt]s"],
  "roots": [
    "<rootDir>/packages/core/src",
    "<rootDir>/packages/core/spec/node/",
    "<rootDir>/packages/test/src"
  ],
  "modulePaths": ["<rootDir>"],
  "setupFiles": ["<rootDir>/jestSetup/index.ts"]
}
