{
  "preset": "ts-jest",
  "transform": {
    "\\.[jt]s$": "babel-jest"
  },
  "rootDir": "../../",
  "testEnvironment": "jsdom",
  "timers": "fake",

  "testMatch": ["**/?(*.)+(spec).[jt]s?(x)", "**/?(*.)+(web).(spec).[jt]s?(x)"],
  "roots": ["<rootDir>/packages/core/src", "<rootDir>/packages/core/spec/browser/"],
  "modulePaths": ["<rootDir>"],
  "setupFiles": ["<rootDir>/jestSetup/index.ts", "<rootDir>/jestSetup/web.js"]
}
